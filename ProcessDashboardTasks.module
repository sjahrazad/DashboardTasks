		// Group Task Send Email to All
		if(($taskLimit == 1) && ($emailOption == 2))  {
			foreach($this->wire('users') as $u) {
				if(!$u->hasRole('task-user')) continue;
				if($u->name == 'guest') continue;
				if($u->id == '41') continue;

				if ($u->email != $authorEmail) {
