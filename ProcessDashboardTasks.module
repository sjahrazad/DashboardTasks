			if ($permission->id) $permission->delete();
		}

		$this->message('Dashboard Tasks: Deleted permissions dashboard-tasks, dashboard-tasks-settings and dashboard-tasks-owners.');

		$r = array('task-user','task-owner','task-manager');
		foreach ($r as $p) {
